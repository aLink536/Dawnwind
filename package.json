{
  "name": "dawnwind-shopify-theme",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run build:css\" \"npm run theme:dev\"",
    "build:css": "npx @tailwindcss/cli -i ./assets/main.css -o ./assets/theme.css --watch",
    "build:prod": "npx @tailwindcss/cli -i ./assets/main.css -o ./assets/theme.css --minify",
    "theme:dev": "shopify theme dev --store dawnwind.myshopify.com"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "tailwindcss": "^4.1.16",
    "concurrently": "^8.2.2"
  }
}
