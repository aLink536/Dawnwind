[
  {
    "name": "theme_info",
    "theme_name": "Dawnwind",
    "theme_version": "1.0.0",
    "theme_author": "Nesty",
    "theme_documentation_url": "https://dawnwind.myshopify.com",
    "theme_support_url": "https://dawnwind.myshopify.com/pages/support"
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "Primary font"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "number",
        "id": "max_page_width",
        "label": "Container max-width (px)",
        "default": 1440
      },
      {
        "type": "range",
        "label": "Container padding",
        "id": "container_padding",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default": 5
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
       {
        "type": "color_scheme",
        "id": "color_theme_scheme",
        "label": "Default theme color scheme",
        "default": "scheme-1"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "Input corner radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Theme colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background gradient"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "accent",
            "label": "Accent",
            "default": "#007ACE"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Primary button background",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Primary button text",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button",
            "label": "Secondary button background",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary button text",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Shadow",
            "default": "#121212"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "icons": "text",
          "links": "accent",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "secondary_button",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  }
]
